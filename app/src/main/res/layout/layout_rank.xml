<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cabecalhoRank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="..:: Rank ::.. " />

    <Spinner
        android:id="@+id/spinnerRank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cabecalhoRank"
        />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/TabelaBotoesRankOpcoes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/spinnerRank">
        <TableRow>
            <Button
                android:id="@+id/buttonRankLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TabelaBotoesRankOpcoes"
                android:text="Lista" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textRetornoRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TabelaBotoesRankOpcoes" />
</RelativeLayout>

